@page
@model WebBank.Pages.AccountsStateModel
<div class="text-center">
    <h2>Состояние счетов</h2>
    <h3>Фонд развития банка</h3>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Номер</th>
                <th>Наименование</th>
                <th>Валюта</th>
                <th>Дебет</th>
                <th>Кредит</th>
                <th>Сальдо</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.FundAccount.Id</td>
                <td>@Model.FundAccount.Number</td>
                <td>@Model.FundAccount.Name</td>
                <td>@Model.FundAccount.Currency.Notation</td>
                <td>@Model.FundAccount.Debet</td>
                <td>@Model.FundAccount.Credit</td>
                <td>@(Model.FundAccount.Credit - Model.FundAccount.Debet)</td>
            </tr>
        </tbody>
    </table>
    </br>
    <h3>Касса</h3>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Номер</th>
                <th>Наименование</th>
                <th>Валюта</th>
                <th>Дебет</th>
                <th>Кредит</th>
                <th>Сальдо</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.CashAccount.Id</td>
                <td>@Model.CashAccount.Number</td>
                <td>@Model.CashAccount.Name</td>
                <td>@Model.CashAccount.Currency.Notation</td>
                <td>@Model.CashAccount.Debet</td>
                <td>@Model.CashAccount.Credit</td>
                <td>@(Model.CashAccount.Debet - Model.CashAccount.Credit)</td>
            </tr>
        </tbody>
    </table>
    </br>
    <h3>Клиентские текущие счета</h3>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Номер</th>
                <th>Наименование</th>
                <th>Владелец</th>
                <th>Валюта</th>
                <th>Дебет</th>
                <th>Кредит</th>
                <th>Сальдо</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.CurrentAccounts.Any())
            {
                @foreach (var account in Model.CurrentAccounts)
                {
                    <tr>
                        <td>@account.Id</td>
                        <td>@account.Number</td>
                        <td>@account.Name</td>
                        <td>@Model.FindOwner(account, true)</td>
                        <td>@account.Currency.Notation</td>
                        <td>@account.Debet</td>
                        <td>@account.Credit</td>
                        <td>@(account.Credit - account.Debet)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="21"><h3>Нет счетов</h3></td>
                </tr>
            }
        </tbody>
    </table>
    </br>
    <h3>Клиентские процентные счета</h3>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Номер</th>
                <th>Наименование</th>
                <th>Владелец</th>
                <th>Валюта</th>
                <th>Дебет</th>
                <th>Кредит</th>
                <th>Сальдо</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.PercentAccounts.Any())
            {
                @foreach (var account in Model.PercentAccounts)
                {
                    <tr>
                        <td>@account.Id</td>
                        <td>@account.Number</td>
                        <td>@account.Name</td>
                        <td>@Model.FindOwner(account, false)</td>
                        <td>@account.Currency.Notation</td>
                        <td>@account.Debet</td>
                        <td>@account.Credit</td>
                        <td>@(account.Credit - account.Debet)</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="21"><h3>Нет счетов</h3></td>
                </tr>
            }
        </tbody>
    </table>
    </br>
    <h2>Транзакции</h2>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Время</th>
                <th>Сумма</th>
                <th>Валюта</th>
                <th>Номер счета отправителя</th>
                <th>Часть счета отправителя</th>
                <th>Номер счета получателя</th>
                <th>Часть счета получателя</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Transactions.Any())
            {
                @foreach (var transaction in Model.Transactions)
                {
                    <tr>
                        <td>@transaction.Id</td>
                        <td>@transaction.Time</td>
                        <td>@transaction.Amount</td>
                        <td>@transaction.Currency.Notation</td>
                        @if (transaction.FromAccount != null)
                        {
                            <td>@transaction.FromAccount.Number</td>
                            <td>@(transaction.FromDebet ? "дебет" : "кредит")</td>
                        }
                        else
                        {
                            <td>-</td>
                            <td>-</td>
                        }
                        @if (transaction.ToAccount != null)
                        {
                            <td>@transaction.ToAccount.Number</td>
                            <td>@(transaction.ToDebet ? "дебет" : "кредит")</td>
                        }
                        else
                        {
                            <td>-</td>
                            <td>-</td>
                        }
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="21"><h3>Нет транзакций</h3></td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Footer {
    @Model.SystemDate
    <form method="post">
        <input type="submit" value="+" />
        <input type="number" name="dateDif" />
    </form>
}
